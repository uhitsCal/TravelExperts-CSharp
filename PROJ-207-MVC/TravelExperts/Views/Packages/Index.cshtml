@* Written by Keegan *@

@model IEnumerable<Package>

@{
    ViewData["Title"] = "Packages";
}

<div class="p-4 container-fluid">
	<div class="container-fluid d-flex align-items-center justify-content-center" style="height: 150px; background-color: lightgrey; object-fit: cover; background-blend-mode: multiply; background-image: url(images/packages_banner.jpeg); background-size: cover; background-position: center">
		<div class="display-6 text-white"><b>TRAVEL PACKAGES</b></div>
	</div>
</div>

<div class="container">
    <div class="row">
		@foreach (Package package in Model) {
			<div class="col-md-6 p-4">
				<div>
					<img class=""
					     style="width: 100%; height: 200px; object-fit: cover;"
						 src="images/Packages/@(package.PackageId).jpg">
					<div class="p-3 border">
						<h3>@package.PkgName</h3>
						<p>@package.PkgDesc</p>
						<p>
							<i class="bi bi-cash text-dark"></i>
							@(((decimal)package.PkgBasePrice + (decimal)package.PkgAgencyCommission).ToString("C"))
						</p>
						<p>
							<i class="bi bi-calendar-range text-dark"></i>
							@package.PkgStartDate.Value.ToString("d") <b>to</b> @package.PkgEndDate.Value.ToString("d")
						</p>
					</div>
					<a class="btn btn-outline-dark border border-top-0 rounded-0 w-100" asp-controller="Checkout" asp-route-id="@package.PackageId">
						<i class="bi bi-bag-fill"></i> Book
					</a>
				</div>
			</div>
		}
    </div>
</div>
