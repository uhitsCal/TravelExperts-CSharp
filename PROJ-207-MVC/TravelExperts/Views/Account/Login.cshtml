@*Contributor: Calvin C*@
@model TravelExpertsData.Customer
@{
    ViewData["Title"] = "Login";
    ViewData["NavbarLight"] = true;
} 

<section class="vh-100">
    <div class="bg-image"></div>
        <div class="overlay"></div>

  <div class="container py-5 h-100">
        
    <div class="row d-flex justify-content-center align-items-center h-100">
            
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                
        <div class="card bg-dark text-white" style="border-radius: 1rem;">
                    
          <div class="card-body p-5 text-center">
                <form asp-action="Login" method="post">
                <div class="mb-md-5 mt-md-4 pb-5">

                    <h2 class="fw-bold mb-2 text-uppercase">Login</h2>
                    <p class="text-white-50 mb-5">Please enter your username and password!</p>
              
                    <div class="form-outline form-white mb-4">
                    <span asp-validation-for="CustUsername"></span>
                    <input type="text" class="form-control form-control-lg" asp-for="CustUsername" />
                    <label class="form-label">Username</label>
                    </div>

                    <div class="form-outline form-white mb-4">
                    <span asp-validation-for="CustPassword"></span>
                    <input type="password" class="form-control form-control-lg" asp-for="CustPassword" />
                    <label class="form-label" >Password</label>
                    </div>

                    <p class="small mb-5 pb-lg-2"><a class="text-white-50" href="@Url.Action("index", "Register")">Forgot password?</a></p>

                    <button class="btn btn-outline-light btn-lg px-5" type="submit">Login</button>

                </div>
            </form>
            <div>
                     <p class="mb-0">Don't have an account? <a href="@Url.Action("index", "Register")" class="text-white-50 fw-bold">Sign Up</a>
              </p>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
  </div>
</section>
